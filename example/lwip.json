{
  "arch":"amd64",
  "os":"linux",
  "project":"lwip",
  "container":{
    "name":"vspell-build-container",
    "tag":"1"
  },
  "sources":[
    {
      "git":"https://git.savannah.gnu.org/git/lwip.git",
      "branch":"master",
      "directory":["%workspace%", "lwip"]
    }
  ],
  "compiler":[
    {
      "lang":"c",
      "version":"12",
      "path":[
        "%sysroot%",
        "usr",
        "bin",
        "clang"
      ],
      "export":"cc_path"
    },
    {
      "lang":"cpp",
      "version":"12",
      "path":[
        "%sysroot%",
        "usr",
        "bin",
        "clang++"
      ],
      "export":"cxx_path"
    }
  ],
  "targets":[
    "lwip/build/contrib/ports/unix/example_app/example_app",
    "lwip/build/contrib/ports/unix/example_app/liblwipcore.a"
  ],
  "workspace":[
    "%sysroot%",
    "home",
    "vspell",
    "src"
  ],
  "environments":{
    "cc":{
      "bases":[
        "%system%"
      ],
      "vars":{
        "CC":"%cc_path%",
        "CXX":"%cxx_path%"
      }
    }
  },
  "commands":[
    {
      "directory":[
        "%workspace%",
        "lwip"
      ],
      "command":[
        "cp",
        "contrib/examples/example_app/lwipcfg.h.example",
        "contrib/examples/example_app/lwipcfg.h"
      ]
    },
    {
      "directory":[
        "%workspace%",
        "lwip"
      ],
      "command":[
        "mkdir",
        "build"
      ]
    },
    {
      "directory":[
        "%workspace%",
        "lwip",
        "build"
      ],
      "command":[
        "cmake",
        "../",
        "-DCMAKE_C_COMPILER=${CC}",
        "-DCMAKE_CXX_COMPILER=${CXX}"
      ]
    },
    {
      "directory":[
        "%workspace%",
        "lwip",
        "build"
      ],
      "command":[
        "make"
      ]
    }
  ]
}