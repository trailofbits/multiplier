{
   "arch":"amd64",
   "os":"linux",
   "project":"opensc",
   "container":{
      "name":"vspell-build-container",
      "tag":"1"
   },
   "sources":[
      {
         "git":"https://github.com/OpenSC/OpenSC.git",
         "branch":"master",
         "directory":[
            "%workspace%",
            "opensc"
         ]
      }
   ],
   "compiler":[
      {
         "lang":"c",
         "version":"12",
         "path":[
            "%sysroot%",
            "usr",
            "bin",
            "clang"
         ],
         "export":"cc_path"
      },
      {
         "lang":"cpp",
         "version":"12",
         "path":[
            "%sysroot%",
            "usr",
            "bin",
            "clang++"
         ],
         "export":"cxx_path"
      }
   ],
   "targets":[
      [
         "%workspace%",
         "opensc",
         "src",
         "libopensc",
         ".libs",
         "libopensc.so"
      ]
   ],
   "workspace":[
      "%sysroot%",
      "home",
      "vspell",
      "src"
   ],
   "environments":{
      "cc":{
         "bases":[
            "%system%"
         ],
         "vars":{
            "CC":"%cc_path%",
            "CXX":"%cxx_path%"
         }
      }
   },
   "commands":[
      {
         "directory":[
            "%workspace%",
            "opensc"
         ],
         "environment":"cc",
         "command":[
            ".github/setup-linux.sh"
         ]
      },
      {
         "directory":[
            "%workspace%",
            "opensc"
         ],
         "environment":"cc",
         "command":[
            "./bootstrap"
         ]
      },
      {
         "directory":[
            "%workspace%",
            "opensc"
         ],
         "environment":"cc",
         "command":[
            "./configure"
         ]
      },
      {
         "directory":[
            "%workspace%",
            "opensc"
         ],
         "environment":"cc",
         "command":[
            "make"
         ]
      }
   ]
}