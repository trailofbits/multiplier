{
  "arch": "amd64",
  "os": "linux",
  "project" : "linux_kernel",
  "container": {
      "name" : "vspell-build-container",
      "tag"  : "1"
  },
  "sources": [{
      "git" : "https://github.com/torvalds/linux.git",
      "branch": "v5.14",
      "directory": ["%workspace%", "linux_kernel"]
   }], 
   
  "compiler" : [{
    "lang": "c",
    "version" : "12",
          "path":[
        "%sysroot%",
        "usr",
        "bin",
        "clang"
      ]
  }],
  
  "workspace": ["%sysroot%", "home", "vspell", "src"],
  
  "envionments": [
  ],
  
  "commands":[
      {
      "directory":[
        "%workspace%",
        "linux_kernel"
      ],
      "environment":"cc",
      "command":["cp", "linux.config", "linux_kernel/.config"]
    },
          {
      "directory":[
        "%workspace%",
        "linux_kernel"
      ],
      "environment":"cc",
      "command":["make", "-j4"]
    }]
}